{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES2022"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "scripts"
    ]
}